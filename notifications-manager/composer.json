{
    "name": "ijideals/notifications-manager",
    "description": "Package to manage user notification preferences and potentially centralize notification logic for IJIDeals.",
    "type": "laravel-package",
    "license": "proprietary",
    "authors": [
        {
            "name": "IJIDeals",
            "email": "contact@ijideals.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "ijideals/user-management": "*"
    },
    "autoload": {
        "psr-4": {
            "IJIDeals\\NotificationsManager\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "IJIDeals\\NotificationsManager\\Providers\\NotificationsManagerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
